<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
   xmlns="http://xamarin.com/schemas/2014/forms"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:templateUi="clr-namespace:TemplateUI.Controls;assembly=TemplateUI"
   x:Class="ClimbingMap.Backend.Views.MainPage"
   Title="{Binding Title}">

   <Grid>
       <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
       </Grid.RowDefinitions>
       <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
       </Grid.ColumnDefinitions>

       <Label Text="Repository" />
       <Label
          Grid.Column="1"
          Text="{Binding RepositoryPath}"
          Background="Grey" />
       <Button
          Grid.Column="2"
          Text="Browse"
          Command="{Binding BrowseClickedCommand}" />

       <templateUi:TreeView
          Grid.ColumnSpan="3"
          Grid.Row="1"
          RootNodes="{Binding RepoStructure}"
          SelectionMode="Single"
          SelectedItem="{Binding SelectedRepoNode}"
          />

       <Label
          Grid.Row="2"
          Grid.ColumnSpan="3"
          Text="Stats" />
   </Grid>

</ContentPage>