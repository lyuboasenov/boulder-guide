<UserControl x:Class="ClimbingMap.Manager.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">

   <StackPanel Orientation="Horizontal">
      <Button
            Grid.Column="2"
            Content="New area"
            Command="{Binding NewAreaCommand}" />
      <Button
            Grid.Column="2"
            Content="New route"
            Command="{Binding NewRouteCommand}" />
      <Button
            Grid.Column="2"
            Content="Load area"
            Command="{Binding LoadAreaCommand}" />
      <Button
            Grid.Column="2"
            Content="Load route"
            Command="{Binding LoadRouteCommand}" />
   </StackPanel>
</UserControl>
